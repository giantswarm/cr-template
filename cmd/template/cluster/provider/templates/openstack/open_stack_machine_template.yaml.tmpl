apiVersion: infrastructure.cluster.x-k8s.io/v1alpha4
kind: OpenStackMachineTemplate
metadata:
  labels:
    "release.giantswarm.io/version": "{{ .ReleaseVersion }}"
    "giantswarm.io/cluster": "{{ .Name }}"
    "cluster.x-k8s.io/cluster-name": "{{ .Name }}"
    "giantswarm.io/organization": "{{ .Organization }}"
  name: {{ .Name }}
  namespace: {{ .Namespace }}
spec:
  template:
    spec:
      flavor: {{ .NodeMachineFlavor }}
      image: {{ .ImageName }}
      sshKeyName: {{ .SSHKeyName }}
      cloudName: {{ .Cloud }}
      identityRef:
        name: {{ .CloudConfig }}
        kind: Secret
      rootVolume:
        sourceType: {{ .RootVolumeSourceType }}
        diskSize: {{ .RootVolumeDiskSize }}
        sourceUUID: {{ .RootVolumeSourceUUID }}
